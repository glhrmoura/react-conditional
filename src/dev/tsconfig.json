{
  "include": ["../../src"],
  "exclude": [
    "../../dist",
    "../../node_modules"
  ],
  "compilerOptions": {
    "jsx": "react",
    "module": "esnext",
    "rootDir": "../",
    "outDir": "../../dist",
    "importHelpers": true,
    "lib": ["dom", "esnext"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["../../src/*"],
    },
  },
}